<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WarriorAbsActivity">

    <LinearLayout
        android:gravity="center_vertical"
        android:background="#FF0101"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:src="@drawable/menu" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:text="DAREBEE"
            android:textStyle="bold"
            android:textSize="@dimen/_20ssp"
            android:fontFamily="@font/bangers"
            android:textColor="#FF0101"
            android:background="#EEEEEE"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_290sdp"
                    android:src="@drawable/a3"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    style="@style/roundedImageStyle"
                    app:shapeAppearanceOverlay="@style/roundedImageStyle"
                    android:layout_height="@dimen/_380sdp"/>


                <TextView
                    android:textColor="#808080"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="+ Timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="#808080"
                    android:padding="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="+ Sets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="@dimen/_290sdp"
                    android:src="@drawable/a4"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    style="@style/roundedImageStyle"
                    app:shapeAppearanceOverlay="@style/roundedImageStyle"
                    android:layout_height="@dimen/_380sdp"/>



                <TextView
                    android:layout_margin="@dimen/_10sdp"
                    android:textColor="#808080"
                    android:textSize="@dimen/_15ssp"
                    android:text="Develop functionally strong, impressive abs that will help you increase the power generated by every movement of your body, help you resist fatigue and make it easier to sit, stand, jump and run. The Warrior Abs Challenge gives you specific exercises to perform each day and adds an extra dimension through the use of a 'weapon' your body (and abs) need to adjust to use correctly. So, unleash your inner warrior, add the Extra Quest to your daily routine and be prepared to feel totally different at the end of the 30-day period."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="@dimen/_100sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/download"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    style="@style/roundedImageStyle"
                    app:shapeAppearanceOverlay="@style/roundedImageStyle"
                    android:layout_height="@dimen/_70sdp"/>


            </LinearLayout>



        </ScrollView>
    </LinearLayout>

</LinearLayout>