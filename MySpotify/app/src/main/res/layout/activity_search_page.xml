<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".SearchPageActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_20ssp"
                android:textColor="#ffffff"
                android:text="Search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginStart="@dimen/_200sdp"
            android:src="@drawable/camera"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="#808080"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/radius2"
            android:text="what do you want to listen today?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/loutProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_50sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/profile"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
<!--main part-->

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_weight="7.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/sofiasanssss"
                android:textSize="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:textColor="#ffffff"
                android:text="Browse all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b1"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b2"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b3"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b4"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b5"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b6"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b7"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b8"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b9"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b10"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b11"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b12"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b13"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b14"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b15"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b16"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b17"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>

                <ImageView
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:src="@drawable/b18"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"/>
            </LinearLayout>



        </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!--    end-->



    <!--Bottom-->
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/loutHomeButton"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/home"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <TextView
                    android:textColor="#ffffff"
                    android:text="Home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loutSearch"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/search"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <TextView
                    android:textColor="#ffffff"
                    android:text="Search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loutLikedSongs"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/heart"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <TextView
                    android:textColor="#ffffff"
                    android:text="Liked Songs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loutYourLibrary"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/library"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"/>

                <TextView
                    android:textColor="#ffffff"
                    android:text="Your Library"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>





        </LinearLayout>


    </LinearLayout>





</LinearLayout>