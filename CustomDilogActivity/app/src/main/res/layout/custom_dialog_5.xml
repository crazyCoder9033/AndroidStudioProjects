<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:background="@drawable/custom1"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TextView
            android:layout_marginHorizontal="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            android:textColor="#000000"
            android:text="Set backup account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

       <LinearLayout
           android:layout_marginTop="@dimen/_10sdp"
           android:gravity="center_vertical"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
               android:id="@+id/profile_image"
               android:layout_width="@dimen/_20sdp"
               android:layout_height="@dimen/_20sdp"
               android:src="@drawable/man1"
               android:layout_marginHorizontal="@dimen/_10sdp"
               app:civ_border_width="@dimen/_1sdp"
             />

           <TextView
               android:textColor="#000000"
               android:text="mark123@gmail.com"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>


       </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"

            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/man2"

                android:layout_marginHorizontal="@dimen/_10sdp"
                app:civ_border_width="@dimen/_1sdp"
                />

            <TextView
                android:textColor="#000000"
                android:text="joshstephan33@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"

            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/man3"
                android:layout_marginHorizontal="@dimen/_10sdp"
                app:civ_border_width="@dimen/_1sdp"
                />

            <TextView
                android:textColor="#000000"
                android:text="Add Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <Button
            android:id="@+id/btnSubmit"
            android:layout_gravity="center"
            android:backgroundTint="#000000"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>


</LinearLayout>