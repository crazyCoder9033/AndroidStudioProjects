<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9E5E00"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/allerta_stencil"
        android:text="RESUME"
        android:textStyle="italic"
        android:textColor="#F6CC8E"
        android:textSize="@dimen/_40sdp"
        android:paddingHorizontal="@dimen/_20sdp"/>


    <ScrollView
        android:background="#F6CC8E"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERSONAL DETAILS"
            android:textColor="#9E5E00"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            />

            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_margin="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:textColor="#000000"
                    android:inputType="text"
                    android:textColorHint="#8A8484"
                    android:id="@+id/edtFullName"
                    android:background="@drawable/radius"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:hint="FULL NAME"/>

                <EditText
                    android:layout_margin="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:id="@+id/edtPhone"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="#8A8484"
                    android:textColor="#000000"
                    android:background="@drawable/radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PHONE NUMBER"
                    />

                <EditText
                    android:layout_margin="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:background="@drawable/radius"
                    android:hint="EMAIL"
                    android:textColorHint="#8A8484"
                    android:padding="@dimen/_10sdp"
                    android:id="@+id/edtEmail"
                    />

                <EditText
                    android:layout_margin="@dimen/_10sdp"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:id="@+id/edtAddress"
                    android:textColorHint="#8A8484"
                    android:textColor="#000000"
                    android:background="@drawable/radius"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="ADDRESS"
                    android:padding="@dimen/_10sdp"

                    />
            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            android:text="LANGUAGES SPEAKS"
            android:textColor="#9E5E00"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkENG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="ENGLISH" />

            <CheckBox
                android:id="@+id/chkHindi"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="HINDI" />

            <CheckBox
                android:id="@+id/chkGujarati"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="GUJARATI" />

            <CheckBox
                android:id="@+id/chkMarathi"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="MARATHI" />
        </LinearLayout>




        <TextView
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENDER"
            android:textStyle="bold"
            android:textColor="#9E5E00"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            />
            <RadioGroup
                android:id="@+id/rdgGender"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_20sdp"
                android:layout_height="match_parent">
                <RadioButton
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MALE"
                    />
                <RadioButton
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FEMALE"
                    />
                <RadioButton
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OTHER"
                    />

            </RadioGroup>

        <TextView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="MARITAL STATUS"
            android:textColor="#9E5E00"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            />
        <RadioGroup
            android:id="@+id/rdgStatus"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_20sdp"
            android:layout_height="match_parent">
            <RadioButton
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SINGLE"
                />
            <RadioButton
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MARRIED"
                />
            <RadioButton
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIVORCED"
                />
            </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            android:text="HOBBIES"
            android:textColor="#9E5E00"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkSing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="Singing" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkDance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="Dancing" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkGym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="GYM" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="Reading" />
        </LinearLayout>

        <LinearLayout
            android:paddingHorizontal="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkCycle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="Cycling" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="Movies" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkCricket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="Cricket" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkTravel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:imeOptions="actionNext"
                android:text="Travelling" />
        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDUCATIONAL DETAILS"
            android:textColor="#9E5E00"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            />

        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLASS"
                android:layout_weight="5"
                />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10th"
                android:layout_weight="1"
                />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12th"
                android:layout_weight="1"
                />

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graduation"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PERCENTAGE"
                android:layout_weight="2"
                />

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:id="@+id/edt10th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:id="@+id/edt12th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:id="@+id/edtGrad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YEAR"
                android:layout_weight="3"
                />

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:id="@+id/edtYear10th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:id="@+id/edtYear12th"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <EditText
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:id="@+id/edtYearGrad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAST JOB EXPERIENCE"
            android:textColor="#9E5E00"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textSize="@dimen/_20sdp"
            />

        <EditText
            android:textColor="#000000"
            android:imeOptions="actionNext"
            android:id="@+id/edtJobxp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textImeMultiLine"
            android:background="@drawable/radius"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:paddingVertical="@dimen/_15sdp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingHorizontal="@dimen/_20sdp"
            android:text="SKILLS"
            android:textColor="#9E5E00"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_15sdp"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkMsoffice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MS OFFICE" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkCommunication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Communication Skill" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkTeamWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Team Work" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="@dimen/_15sdp"
            android:orientation="horizontal">

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkProblem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Problem solving" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkLeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Leadership" />

            <CheckBox
                android:textColor="#000000"
                android:id="@+id/chkTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time Management" />

        </LinearLayout>



        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#9E5E00"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="SUBMIT" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="#9E5E00"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="THANK YOU"
            />



    </LinearLayout>

    </ScrollView>
</LinearLayout>