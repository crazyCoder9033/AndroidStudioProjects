<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".DisplayDataActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_30sdp"
            android:id="@+id/imgSmallShow"
            android:layout_height="@dimen/_30sdp"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="#ffffff"
            android:id="@+id/txtNameShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgBig"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"/>

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/_2sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:src="@drawable/heart"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>

            <ImageView
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:src="@drawable/chat"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>

            <ImageView
                android:layout_marginHorizontal="@dimen/_5sdp"
                android:src="@drawable/send"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>

            <ImageView
                android:layout_marginStart="@dimen/_190sdp"
                android:src="@drawable/ribbon"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="@dimen/_2sdp"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#808080"
                android:text="4889 Likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingBottom="@dimen/_10sdp"
                android:textColor="#808080"
                android:text="View all (89) comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>




    </LinearLayout>

    </LinearLayout>
</LinearLayout>