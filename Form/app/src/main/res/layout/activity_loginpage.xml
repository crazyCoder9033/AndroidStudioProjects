<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluwhite"
    android:orientation="vertical"
    tools:context=".LOGINPAGE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        android:padding="20dp"
        android:layout_marginTop="100dp"
        android:textAllCaps="false"/>

    </LinearLayout>
<!--    email-->
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="15dp"
        android:background="@drawable/roundcorner"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/email"
                android:layout_width="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_height="20dp"/>

            <EditText
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
<!--        password-->
        <LinearLayout
            android:background="@drawable/roundcorner"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:padding="15dp"
            android:layout_marginHorizontal="40dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="10dp"
                android:src="@drawable/password"
                android:layout_gravity="center"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <EditText
                android:text="Password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>
<!--        rememberME n forgot-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:gravity="left"
                android:layout_height="wrap_content">
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                    <TextView
                        android:text="Remember Me"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="right"
                android:paddingRight="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="#000000"
                    android:layout_height="wrap_content"
                    android:text="Forgot password?"/>
            </LinearLayout>

        </LinearLayout>
<!--login button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:background="@drawable/roundcorner"
                android:text="Log in with your account"
                android:textColor="#008EFF"
                android:id="@+id/btnLogin"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>
<!--        logintext-->
        <TextView
            android:text="Log in with"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
<!--            fb button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:background="@drawable/fbbutton"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/fb"
                    android:layout_width="20dp"
                    android:background="#2196F3"
                    android:layout_height="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="Facebook"
                    android:background="#2196F3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
<!--            google button-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:gravity="center"
                android:background="@drawable/gbutton"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/gplus"
                    android:layout_width="20dp"
                    android:background="#FD3E02"
                    android:layout_height="20dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:text="Google"
                    android:background="#FD3E02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundcorner"
            android:text="New User? Create account"
            android:textColor="#008EFF"
            android:textStyle="bold"
            android:padding="10dp"
            android:textAllCaps="false"
            />

</LinearLayout>

