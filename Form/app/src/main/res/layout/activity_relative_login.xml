<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F0F6"
    tools:context=".RelativeLOGIN">


    <TextView
        android:textAllCaps="false"
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="LOGIN"
        android:textSize="30sp"
        android:textColor="#6667AB"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtID"
        android:layout_marginTop="40dp"
        android:padding="20dp"
        android:background="@drawable/roundcorner"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:hint="Please enter your email ID"

        />

    <EditText
        android:textColorHint="#FFFFFF"
        android:background="@drawable/roundcorner"
        android:padding="20dp"
        android:id="@+id/txtEnterPassword"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/txtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Password"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#6667AB"
        android:layout_below="@+id/txtEnterPassword"

        />

</RelativeLayout>